<div data-role="page">

  <div data-role="header" data-position="inline">
    <h1>Edit <%= @movie.title %></h1>
    <a href="<%= url_for :action => :show, :id => @movie.object %>" class="ui-btn-left" data-icon="back" data-direction="reverse">
      Cancel
    </a>
    <a href="<%= url_for :action => :delete, :id => @movie.object %>" class="ui-btn-right" data-icon="delete" data-direction="reverse">
      Delete
    </a>
  </div>

  <div data-role="content">
    <form method="POST" action="<%= url_for :action => :update %>">
      <input type="hidden" name="id" value="<%= @movie.object %>"/>
      
          <div data-role="fieldcontain">
            <label for="movie[title]" class="fieldLabel">Title</label>
            <input type="text" id="movie[title]" name="movie[title]" value="<%= @movie.title %>" <%= placeholder( "Title" ) %> />
          </div>
      
          <div data-role="fieldcontain">
            <label for="movie[year]" class="fieldLabel">Year</label>
            <input type="text" id="movie[year]" name="movie[year]" value="<%= @movie.year %>" <%= placeholder( "Year" ) %> />
          </div>
      
          <div data-role="fieldcontain">
            <label for="movie[rated]" class="fieldLabel">Rated</label>
            <input type="text" id="movie[rated]" name="movie[rated]" value="<%= @movie.rated %>" <%= placeholder( "Rated" ) %> />
          </div>
      
          <div data-role="fieldcontain">
            <label for="movie[released]" class="fieldLabel">Released</label>
            <input type="text" id="movie[released]" name="movie[released]" value="<%= @movie.released %>" <%= placeholder( "Released" ) %> />
          </div>
      
          <div data-role="fieldcontain">
            <label for="movie[runtime]" class="fieldLabel">Runtime</label>
            <input type="text" id="movie[runtime]" name="movie[runtime]" value="<%= @movie.runtime %>" <%= placeholder( "Runtime" ) %> />
          </div>
      
          <div data-role="fieldcontain">
            <label for="movie[genre]" class="fieldLabel">Genre</label>
            <input type="text" id="movie[genre]" name="movie[genre]" value="<%= @movie.genre %>" <%= placeholder( "Genre" ) %> />
          </div>
      
          <div data-role="fieldcontain">
            <label for="movie[director]" class="fieldLabel">Director</label>
            <input type="text" id="movie[director]" name="movie[director]" value="<%= @movie.director %>" <%= placeholder( "Director" ) %> />
          </div>
      
          <div data-role="fieldcontain">
            <label for="movie[writer]" class="fieldLabel">Writer</label>
            <input type="text" id="movie[writer]" name="movie[writer]" value="<%= @movie.writer %>" <%= placeholder( "Writer" ) %> />
          </div>
      
          <div data-role="fieldcontain">
            <label for="movie[actors]" class="fieldLabel">Actors</label>
            <input type="text" id="movie[actors]" name="movie[actors]" value="<%= @movie.actors %>" <%= placeholder( "Actors" ) %> />
          </div>
      
          <div data-role="fieldcontain">
            <label for="movie[plot]" class="fieldLabel">Plot</label>
            <input type="text" id="movie[plot]" name="movie[plot]" value="<%= @movie.plot %>" <%= placeholder( "Plot" ) %> />
          </div>
      
          <div data-role="fieldcontain">
            <label for="movie[poster]" class="fieldLabel">Poster</label>
            <input type="text" id="movie[poster]" name="movie[poster]" value="<%= @movie.poster %>" <%= placeholder( "Poster" ) %> />
          </div>
      
          <div data-role="fieldcontain">
            <label for="movie[imdbID]" class="fieldLabel">Imdbid</label>
            <input type="text" id="movie[imdbID]" name="movie[imdbID]" value="<%= @movie.imdbID %>" <%= placeholder( "Imdbid" ) %> />
          </div>
      
      <input type="submit" value="Update"/>
    </form>
  </div>

</div>
